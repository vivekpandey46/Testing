
public class Pattern7 {

	public static void main(String args[])
	{
		int n =5;
		
		for (int i=1;i<=5;i++)
		{
			
			for (int j=1;j<= n-i;j++)
			{
				System.out.print(" ");
			}
			
			for (int k= 1;k<=i;k++)
			{
				System.out.print("*" + " ");
			}
			
			System.out.println();
			
			for (int l=1;l<=4;l++)
			{
				for (int m=1;m<=l;m++)
				{
					System.out.print(" ");
				}
				
				for (int o=1;o<= n-1;o++)
				{
					System.out.print("*" + " ");
				}
				
				System.out.println();
			}
			
		}
	}
}
